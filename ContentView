import SwiftUI

enum Segment: String, CaseIterable {
  case top
  case left
  case right

  var image: Image {
      Image(self.rawValue)
  }
}

struct ContentView: View {
  var body: some View {
    VStack {
      ZStack {
        ForEach(Segment.allCasses, id: \.self) {
          segment.image
            .modifier(ClipAnimatedShape(segment: segment))
        }
      } 
      Spacer()
    }
    .ignoreSafeArea()
  }
}

struct ClipAnimatedShape: ViewModifier {
  var segment: Segment

  func body(content: Content) -> some View {
    switch segment{
      case .top:
        content
          .clipShape(TopShape())

      case .left:
        content
          .clipShape(LeftShape())

      case .right:
        content
          .clipShape(RightShape())
    }
  }
}

