import SwiftUI

enum Segment: String, CaseIterable {
  case top
  case left
  case right

  var image: Image {
      Image(self.rawValue)
  }
}

struct ContentView: View {
  var body: some View {
    VStack {
      ZStack {
        ForEach(Segment.allCasses, id: \.self) {
          segment.image
            .clipShape(RightShape())
        }
      } 
      Spacer()
    }
    .ignoreSafeArea()
  }
}

